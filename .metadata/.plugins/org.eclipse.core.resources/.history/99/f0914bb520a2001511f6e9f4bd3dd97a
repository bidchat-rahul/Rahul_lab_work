package elevatorStimulation;

import java.util.Scanner;

public class working {

	public static void main(String[] args) throws InterruptedException {
		int reqFlor;int status;
		Scanner readnum = new Scanner(System.in);
		elevator el1 =new elevator();
		System.out.println("Enter The Floor No");
		reqFlor = readnum.nextInt();
		
		status=el1.getStatus();
		status=el1.setStatus(3);
		if(status==0){
			el1.callElevator(reqFlor);
			
		}else
		{
			if(status<reqFlor){
				el1.callElevator(reqFlor,status,true);	
			}else{
				el1.callElevator(reqFlor,status,false);	
			}
			
		}
		
		

	}

}
