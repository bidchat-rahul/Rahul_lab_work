package palindromeNString;
import javax.sound.sampled.ReverbType;

public class StringFunction {
	String[] palindromeWords;
	public String[] IsPalindrome(String sWord){
		String temp=sWord;
		char[] temp2 = new char[temp.length()] ;
		String temp3;
		int k=0;

		StringBuilder temp1 = new StringBuilder();
		
		
		for(int i=0;i< temp.length();i++){
			temp2[i]=temp.charAt(i);
			System.out.println(temp2);
			
			if(i>=1){
				temp3=temp2.toString();
				System.out.println("1 "+temp2);
				temp1.append(temp3);
				temp3 = temp1.reverse().toString();
				System.out.println("reverce" + temp1.reverse() );
				System.out.println(temp3);
				if(temp2.toString().equals(temp3) ){
					palindromeWords[k] = temp2.toString();
					k++;
				}
				}
			}
	
	
		
		
		
		return palindromeWords;
	}

}
