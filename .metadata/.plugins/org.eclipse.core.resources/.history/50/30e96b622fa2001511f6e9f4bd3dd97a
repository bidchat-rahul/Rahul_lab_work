package elevatorStimulation;

public class requestElevator extends elevator {

	public void elevatorCall(int currentFloor){
		int status;
		status = getStatus();
		if(currentFloor <= status){
			if(status==0){
				System.out.println("Elevator at " +callElevator(currentFloor));
				System.out.println("Opening Doors");
			}else
			{
				if(status<currentFloor){
					System.out.println("Elevator at " +callElevator(currentFloor,status,true));
					System.out.println("Opening Doors");
				}else{
					System.out.println("Elevator at " +callElevator(currentFloor,status,false));
					System.out.println("Opening Doors");
				}
				
			}	
			
		}
	}
}
